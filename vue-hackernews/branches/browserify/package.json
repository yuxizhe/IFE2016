  "bugs": {
    "url": "https://github.com/yyx990803/vue-hackernews/issues"
  },
  "homepage": "https://github.com/yyx990803/vue-hackernews",
  "devDependencies": {
    "insert-css": "^0.2.0",
    "stylus": "^0.49.1",
    "uglify-js": "^2.4.15",
    "vueify": "^1.1.0",
    "watchify": "^2.1.1"
  },
  "dependencies": {
    "director": "^1.2.3",
    "firebase": "^1.1.1",
    "vue": "0.11.3"
  }
